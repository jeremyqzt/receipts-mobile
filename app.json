{
  "expo": {
    "name": "receipts-mobile",
    "slug": "receipts-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends."
        }
      ]
    ],
    "android": {
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.anonymous.receiptsmobile"
    },
    "ios": {
      "bundleIdentifier": "com.anonymous.receiptsmobile"
    },
    "extra": {
      "eas": {
        "projectId": "25d4d755-369c-4d4d-b297-9370067503ce"
      }
    }
  },
  "splash": {
    "image": "./assets/splash.png",
    "resizeMode": "contain",
    "backgroundColor": "#ffffff"
  },
  "updates": {
    "fallbackToCacheTimeout": 0
  },
  "assetBundlePatterns": [
    "**/*"
  ],
  "infoPlist": {
    "NSPhotoLibraryUsageDescription": "This app uses the photo library to upload receipts.",
    "NSCameraUsageDescription": "This app uses the camera to capture receipts.",
    "NSMicrophoneUsageDescription": "This app uses the microphone to record audio while you are using the video camera"
  },
  "ios": {
    "supportsTablet": true
  },
  "android": {
    "adaptiveIcon": {
      "foregroundImage": "./assets/adaptive-icon.png",
      "backgroundColor": "#FFFFFF"
    }
  },
  "web": {
    "favicon": "./assets/favicon.png"
  }
}
